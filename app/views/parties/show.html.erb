<%- model_class = Party -%>
<div class="page-header">
  <h1><%=t '.title', :default => Party %></h1>
</div>

<div class="fieldset">
  <dl>
      <dt class="label label-default"><%= model_class.human_attribute_name(:location) %></dt>
      <dd><pre class="prettyprint"><%= @party.location %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:par_time) %></dt>
      <dd><pre class="prettyprint"><%= @party.par_time %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:posted) %></dt>
      <dd><pre class="prettyprint"><%= @party.posted %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:location) %></dt>
      <dd><pre class="prettyprint"><%= @party.location %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:maincontact) %></dt>
      <dd><pre class="prettyprint"><%= @party.maincontact %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:secondarycontact) %></dt>
      <dd><pre class="prettyprint"><%= @party.secondarycontact %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:par_name) %></dt>
      <dd><pre class="prettyprint"><%= @party.par_name %></pre></dd>
  </dl>
</div>

<div class="form-group">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              parties_path, :class => 'btn btn-default'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_party_path(@party), :class => 'btn btn-default' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              party_path(@party),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>

