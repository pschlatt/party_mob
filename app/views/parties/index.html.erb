<%- model_class = Party -%>
<div class="page-header">
  <h1><%=t '.title', :default => Party %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th>ID</th>
      <th><%= model_class.human_attribute_name(:location) %></th>
      <th><%= model_class.human_attribute_name(:par_time) %></th>
      <th><%= model_class.human_attribute_name(:posted) %></th>
      <th><%= model_class.human_attribute_name(:location) %></th>
      <th><%= model_class.human_attribute_name(:maincontact) %></th>
      <th><%= model_class.human_attribute_name(:secondarycontact) %></th>
      <th><%= model_class.human_attribute_name(:par_name) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @parties.each do |party| %>
      <tr>
        <td><%= party.id %></td>
        <td><%= party.location %></td>
        <td><%= party.par_time %></td>
        <td><%= party.posted %></td>
        <td><%= party.location %></td>
        <td><%= party.maincontact %></td>
        <td><%= party.secondarycontact %></td>
        <td><%= party.par_name %></td>
        <td><%=l party.created_at, format: :long %></td>
        <td>
          <%= link_to party_path(party), :class => 'btn btn-xs', :title => "#{ t('.show', :default => t('helpers.links.show')) }" do %>
            <%= glyph 'info-sign' %>
            <%= glyph 'pencil' %>
          <%- end -%>
          <%= link_to party_path(party), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-xs', :title => "#{ t('.destroy', :default => t('helpers.links.destroy')) }" do %>
            <%= glyph 'remove' %>
          <%- end -%>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_party_path,
            :class => 'btn btn-primary' %>
